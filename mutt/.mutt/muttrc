## Posteo account settings
set realname = "Justin Teague"
set from = "bw get username posteo.de"
set hostname = "posteo.de"

set edit_headers = yes
set mbox_type = Maildir
set folder = "~/mail/posteo"

set spoolfile = "+INBOX"
set postponed = "+Drafts"
set record = "+Sent"
set imap_check_subscribed

set header_cache=~/.mutt/cache/headers
set message_cachedir=~/.mutt/cache/bodies

# SMTP Settings
set smtp_pass="`bw get password posteo.de`"
set smtp_url=smtps://$from@$hostname
set ssl_force_tls = yes

# Default editor
set editor = "vim +/^$"
set charset = "utf-8"
set config_charset = "utf-8"

# General settings
set sort = 'threads'
set sort_aux = 'reverse-date-sent'
set fast_reply=yes
set include=yes

# HTML Settings
set mailcap_path 	= ~/.mutt/mailcap
auto_view text/html
alternative_order text/plain text/html

# Keybindings
macro index,pager A "<save-message>=Archive<enter>" "Archive Message"
bind pager j next-line
bind pager k previous-line
bind attach,index,pager \CD next-page
bind attach,index,pager \CU previous-page
bind pager g top
bind pager G bottom
bind attach,index g first-entry
bind attach,index G last-entry

